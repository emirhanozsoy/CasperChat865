<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dip"
    android:layout_marginRight="20dip"
    android:background="@drawable/dialog_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/acme"
        android:textAlignment="center"
        android:textColor="@color/casper_red"
        android:textSize="15pt"
        android:text="Hey, Go and Choose Profile Pic and Username." />

    <TextView
        
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/acme"
        android:text=""
        android:textColor="@color/chatgrey"
        android:textSize="15pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/photolayout"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inComingPhotoMessage"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

    <Button
        android:id="@+id/warning_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/casper_red"
        android:textColor="@color/white"
        android:fontFamily="font/acme"
        android:text="@string/btn_warning" />

</LinearLayout>

